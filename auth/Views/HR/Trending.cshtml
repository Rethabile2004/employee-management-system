@{
    Layout = "~/Views/Shared/_InsideLayoutHR.cshtml";
    ViewData["Title"] = "Trending Skills";
}

<div class="trending-static-root">
    <div class="back-btn-container">
        <a href="@Url.Action("Dashboard", "HR")" class="back-btn">
            Back
        </a>
    </div>
   

    <main class="trending-main">
        <h1>Trending Skills</h1>

        <div class="trending-grid">
            <!-- IT -->
            <div class="card">
                <div class="card-head">
                    <h2>IT</h2>
                    <span class="badge">4</span>
                </div>
                <ul class="skill-list">
                    <li>1. C# / .NET</li>
                    <li>2. Cloud (Azure)</li>
                    <li>3. Kubernetes</li>
                    <li>4. Docker & DevOps</li>
                </ul>
            </div>

            <!-- Operation -->
            <div class="card">
                <div class="card-head">
                    <h2>Operation</h2>
                    <span class="badge">5</span>
                </div>
                <ul class="skill-list">
                    <li>1. Lean Six Sigma</li>
                    <li>2. Supply Chain Management</li>
                    <li>3. Process Improvement</li>
                    <li>4. KPI Design</li>
                    <li>5. Project Management (PMP)</li>
                </ul>
            </div>

            <!-- Finance -->
            <div class="card">
                <div class="card-head">
                    <h2>Finance</h2>
                    <span class="badge">6</span>
                </div>
                <ul class="skill-list">
                    <li>1. Financial Modeling</li>
                    <li>2. Excel</li>
                    <li>3. Power BI</li>
                    <li>4. Accounting</li>
                    <li>5. Forecasting</li>
                    <li>6. Budgeting</li>
                </ul>
            </div>

            <!-- Marketing -->
            <div class="card">
                <div class="card-head">
                    <h2>Marketing</h2>
                    <span class="badge">3</span>
                </div>
                <ul class="skill-list">
                    <li>1. Social Media Marketing</li>
                    <li>2. Copywriting</li>
                    <li>3. Brand Strategy</li>
                </ul>
            </div>
        </div>

        <div style="margin-top:18px;text-align:center;color:rgba(255,255,255,0.78);font-size:14px;">
            Trending skills — Get to be updated anytime.
        </div>
    </main>
</div>