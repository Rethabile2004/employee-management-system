@model auth.Models.Models.QualificationModel

@{
    ViewData["Title"] = "Qualification Details";
}

<div class="min-vh-100" style="padding: 2rem 0;">
    <div class="container">
        <!-- Back & Title -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="List" class="text-decoration-none me-3">
                <i class="bi bi-arrow-left-circle-fill" style="font-size: 1.5rem; color: #6B46C1;"></i>
            </a>
            <div>
                <h1 class="h3 mb-0 fw-bold" style="color: #333;">Qualification Details</h1>
                <p class="text-muted small mb-0">View your qualification and certificate</p>
            </div>
        </div>

        <!-- Main Card -->
        <div class="card border-0 shadow-sm" style="border-radius: 1rem; overflow: hidden;">
            <div class="card-header d-flex justify-content-between align-items-center p-4"
                 style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white;">
                <h4 class="mb-0 fw-semibold summary-heading">Qualification Summary</h4>
                <div class="d-flex gap-2">
                    @if (Model.Status != "Rejected")
                    {
                    @if (Model.Status != "Approved")
                    {
                        <a asp-action="Edit" asp-route-id="@Model.QualificationId"
                           class="btn btn-sm btn-light fw-semibold d-flex align-items-center gap-1">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.QualificationId"
                           class="btn btn-sm btn-outline-light fw-semibold d-flex align-items-center gap-1">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    }
                        
                    }
                </div>
            </div>

            <div class="card-body p-4 p-md-5" style="">
                <div class="row g-4">

                    <!-- Qualification Info -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                <i class="bi bi-mortarboard-fill me-2"></i>
                                <span class="fw-bold">Qualification</span>
                            </h6>
                            <p class="mb-2"><strong>Name:</strong> @Model.QualificationName</p>
                            <p class="mb-2"><strong>Institution:</strong> @Model.InstitutionName</p>
                            <p class="mb-0"><strong>Year:</strong> @Model.CompletionYear</p>
                        </div>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                <i class="bi bi-patch-check-fill me-2"></i>
                                <span class="fw-bold">Approval Status</span>
                            </h6>
                            <span class="status-badge px-4 py-2 rounded-pill fw-semibold @GetStatusClass(Model.Status)">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <!-- Timeline -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                <i class="bi bi-clock-history me-2"></i>
                                <span class="fw-bold">Timeline</span>
                            </h6>
                            <p class="mb-2"><strong>Added:</strong> @(Model.DateAdded != default ? Model.DateAdded.ToString("dd MMM yyyy, HH:mm") : "—")</p>
                            <p class="mb-0"><strong>Updated:</strong> @(Model.DateUpdated != default ? Model.DateUpdated.ToString("dd MMM yyyy, HH:mm") : "—")</p>
                        </div>
                    </div>

                    <!-- IDs -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                <i class="bi bi-fingerprint me-2"></i>
                                <span class="fw-bold">System IDs</span>
                            </h6>
                            <p class="mb-2"><strong>Qualification ID:</strong> <code>@Model.QualificationId</code></p>
                            <p class="mb-0"><strong>User ID:</strong> <code>@Model.UserId</code></p>
                        </div>
                    </div>
                </div>

                <!-- Certificate -->
                @if (!string.IsNullOrWhiteSpace(Model.CertificationUrl))
                {
                    <hr class="my-5" style="border-color: #ddd;" />
                    <div class="text-center">
                        @* <h5 class="mb-4 downloadHeading" style="color: #333;">
                            <i class="bi bi-file-earmark-check-fill me-2" style="color: #6B46C1;"></i>
                            Certificate
                        </h5> *@
                        @* <img src="@Url.Content("~/certificates/" + Model.CertificationUrl)"
                             alt="Certificate"
                             class="img-fluid rounded shadow-sm mb-4"
                             style="max-height: 320px; border: 2px solid #6B46C1;" /> *@
                        <div>
                            @* <a asp-action="DownloadCertificate"
                               asp-route-fileName="@Model.CertificationUrl"
                               class="btn btn-lg px-5"
                               style="background-color: #6B46C1; color: white; border: none; border-radius: 0.75rem; box-shadow: 0 4px 12px rgba(107,70,193,0.3);">
                                <i class="bi bi-download me-2"></i> Download Certificate
                            </a> *@
                            <a asp-action="DownloadCertificate"
                                                       asp-controller="Employee"
                                                       target="_blank"
                                                       asp-route-userId="@Model.UserId"
                                                       asp-route-qualificationId="@Model.QualificationId"
                                                       asp-route-fileUrl="@Model.CertificationUrl"
                                                       asp-route-fileName="@System.IO.Path.GetFileName(Model.CertificationUrl)"
                                                       class="btn btn-outline-primary btn-sm me-1"
                                                       title="Download Qualification Document">
                                                        <i class="bi bi-download"></i></a>
                        </div>
                    </div>
                }
                else
                {
                    <hr class="my-5" style="border-color: #ddd;" />
                    <p class="text-center text-muted fst-italic">
                        <i class="bi bi-file-x me-2"></i> No certificate uploaded.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(string status) => status?.ToLower() switch
    {
        "approved" => "bg-success text-white",
        "pending" => "bg-warning text-dark",
        "rejected" => "bg-danger text-white",
        _ => "bg-secondary text-white"
    };
}

<style>
    .info-card {
        background: #fff;
        transition: all 0.2s ease;
    }

        .info-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.08);
            border-color: #6B46C1 !important;
        }

    code {
        background: #f1f1f1;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.85em;
        color: #444;
    }
</style>