@model auth.Models.Models.QualificationModel

@{
    ViewData["Title"] = "Edit Qualification";
}

<div class="min-vh-100" style=" padding: 2rem 0;">
    <div class="container">
        <!-- Back & Title -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="List" class="text-decoration-none me-3">
                <i class="bi bi-arrow-left-circle-fill" style="font-size: 1.5rem; color: #6B46C1;"></i>
            </a>
            <div>
                <h1 class="h3 mb-0 fw-bold" style="color: #333;">Edit Qualification</h1>
                <p class="text-muted small mb-0">Review and update your qualification details</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="card border-0 shadow-sm" style="border-radius: 1rem; overflow: hidden;">
            <div class="card-body p-4 p-md-5" style="">
                <form asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Hidden Fields -->
                    <input asp-for="QualificationId" type="hidden" />
                    <input asp-for="UserId" type="hidden" />
                    <input asp-for="DateAdded" type="hidden" />
                    <input asp-for="DateUpdated" type="hidden" />
                    <input asp-for="Status" type="hidden" />

                    <!-- Qualification Name (Readonly) -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-mortarboard-fill me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Qualification Name</span>
                        </label>
                        <input asp-for="QualificationName"
                               class="form-control form-control-lg readonly-field"
                               readonly
                               style="background-color: #f8f9fa; border: 1px solid #ccc; border-radius: 0.75rem;" />
                    </div>

                    <!-- Institution (Readonly) -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-building me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Institution</span>
                        </label>
                        <input asp-for="InstitutionName"
                               class="form-control form-control-lg readonly-field"
                               readonly
                               style="background-color: #f8f9fa; border: 1px solid #ccc; border-radius: 0.75rem;" />
                    </div>

                    <!-- Completion Year (Readonly) -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-calendar-check-fill me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Year Obtained</span>
                        </label>
                        <input asp-for="CompletionYear"
                               type="number"
                               class="form-control form-control-lg readonly-field"
                               readonly
                               style="background-color: #f8f9fa; border: 1px solid #ccc; border-radius: 0.75rem;" />
                    </div>

                    <!-- Status Badge -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-patch-check-fill me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Current Status</span>
                        </label>
                        <div>
                            <span class="status-badge px-4 py-2 rounded-pill fw-semibold @GetStatusClass(Model.Status)">
                                @Model.Status
                            </span>
                        </div>
                    </div>

                    <hr class="my-5" style="border-color: #ddd;" />

                    <!-- Certificate Upload -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-file-earmark-arrow-up-fill me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Replace Certificate (Optional)</span>
                        </label>
                        <input type="file"
                               id="certificationFile"
                               name="certificationFile"
                               class="form-control form-control-lg"
                               accept="image/*,application/pdf"
                               style="border: 1px solid #ccc; border-radius: 0.75rem; padding: 0.75rem 1rem;" />
                        <small class="form-text text-muted d-block mt-2">
                            Only upload a new file if you want to replace the current certificate.
                        </small>

                        @if (!string.IsNullOrEmpty(Model.CertificationUrl))
                        {
                            <div class="mt-3 p-3 bg-light rounded d-flex align-items-center" style="border: 1px dashed #ccc;">
                                <i class="bi bi-file-check me-2" style="color: #6B46C1; font-size: 1.2rem;"></i>
                                <a asp-action="DownloadCertificate"
                                   asp-route-fileName="@Model.CertificationUrl"
                                   class="text-decoration-none fw-semibold"
                                   style="color: #6B46C1;">
                                    View Current Certificate
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-3 justify-content-end mt-5">
                        <a asp-action="List"
                           class="btn btn-lg px-4"
                           style="background-color: #ccc; color: #333; border: none; border-radius: 0.75rem;">
                            Cancel
                        </a>
                        <button type="submit"
                                class="btn btn-lg px-5"
                                style="background-color: #6B46C1; color: white; border: none; border-radius: 0.75rem; box-shadow: 0 4px 12px rgba(107, 70, 193, 0.3);">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(string status)
    {
        return status?.ToLower() switch
        {
            "approved" => "bg-success text-white",
            "pending" => "bg-warning text-dark",
            "rejected" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Focus glow for file input
        document.querySelectorAll('input, select').forEach(el => {
            if (!el.hasAttribute('readonly')) {
                el.addEventListener('focus', function() {
                    this.style.boxShadow = '0 0 0 0.2rem rgba(107, 70, 193, 0.25)';
                    this.style.borderColor = '#6B46C1';
                });
                el.addEventListener('blur', function() {
                    this.style.boxShadow = 'none';
                    this.style.borderColor = '#ccc';
                });
            }
        });
    </script>
}

<style>
    .readonly-field {
        cursor: not-allowed;
        opacity: 0.9;
    }

    .status-badge {
        font-size: 0.9rem;
        padding: 0.5rem 1.2rem;
        border-radius: 2rem;
        display: inline-block;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #6B46C1 !important;
        box-shadow: 0 0 0 0.2rem rgba(107, 70, 193, 0.25) !important;
    }

    .card {
        border: 1px solid #ddd;
    }

    hr {
        opacity: 0.3;
    }
</style>