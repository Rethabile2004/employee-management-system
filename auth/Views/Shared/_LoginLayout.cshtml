@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Streamline Auditing System</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: url('@Url.Content("~/images/Dark Background.png")') no-repeat center center fixed;
            background-size: cover;
            background-position: center;
            background-color: #1e1e2f;
        }

        .panel-holder {
            display: flex;
            width: 1100px;
            height: 600px;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.4);
            background: #fff;
        }

        .left-panel {
            width: 50%;
            background-color: #6c5ce7;
            color: #fff;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .left-panel h1 {
                font-size: 2rem;
                font-weight: 700;
                margin-bottom: 15px;
            }

            .left-panel p {
                font-size: 1rem;
                line-height: 1.6;
                opacity: 0.9;
                max-width: 320px;
            }

        .feature-image {
            margin-top: 60px;
        }

            .feature-image img {
                width: 80%;
                max-width: 320px;
                display: block;
                margin-left: 70px;
            }

        .logo-box {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-top: 50px;
        }

            .logo-box img {
                width: 60px;
                height: 60px;
                border-radius: 8px;
            }

            .logo-box span {
                font-weight: 700;
                font-size: 1.4rem;
            }

        .logo-subtext {
            font-size: 0.9rem;
            opacity: 0.85;
            margin-top: -4px;
        }

        .right-panel {
            width: 50%;
            background-color: #f7f6fb;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px;
        }

        .login-container {
            width: 100%;
            max-width: 340px;
        }

            .login-container h2 {
                margin-bottom: 8px;
                font-weight: 700;
                color: #333;
            }

            .login-container p {
                margin-top: 0;
                margin-bottom: 25px;
                font-size: 0.95rem;
                color: #666;
            }

            .login-container img {
                width: 90px;
                display: block;
                margin: 0 auto 20px;
            }

            .login-container input {
                width: 100%;
                padding: 12px 14px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 8px;
                font-size: 0.95rem;
            }

        .btn-primary {
            background-color: #6c5ce7;
            border: none;
            padding: 12px;
            color: white;
            border-radius: 8px;
            width: 100%;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
        }

            .btn-primary:hover {
                background-color: #5a4dd8;
            }

        .text-center {
            text-align: center;
            margin-top: 20px;
            color: #555;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="panel-holder">
        <div class="left-panel">
            <div>
                <h1>Audit Smarter, Not Harder</h1>
                <p>Track, assess, and improve your skills with our intelligent auditing platform.</p>
                <div class="feature-image">
                    <img src="~/images/secure login.png" alt="Feature Illustration" />
                </div>
            </div>
            <div class="logo-box">
                <img src="~/images/Logo_Only_Dark.jpg" alt="Logo" />
                <div>
                    <span>Streamline</span>
                    <div class="logo-subtext">Auditing System</div>
                </div>
            </div>
        </div>

        <div class="right-panel">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
