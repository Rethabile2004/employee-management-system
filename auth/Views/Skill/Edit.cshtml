@model Auth.Models.Models.SkillModel

@{
    ViewData["Title"] = "Edit Skill";
}

<div class="min-vh-100" style=" padding: 2rem 0;">
    <div class="container">
        <!-- Back & Title -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="List" class="text-decoration-none me-3">
                <i class="bi bi-arrow-left-circle-fill" style="font-size: 1.5rem; color: #6B46C1;"></i>
            </a>
            <div>
                <h1 class="h3 mb-0 fw-bold" style="color: #333;">Edit Skill</h1>
                <p class="text-muted small mb-0">Update your professional skill details</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="card border-0 shadow-sm" style="border-radius: 1rem; overflow: hidden;">
            <div class="card-body p-4 p-md-5" style="">
                <form asp-action="Edit" method="post" class="needs-validation" novalidate>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Hidden Fields -->
                    <input asp-for="SkillId" type="hidden" />
                    <input asp-for="UserId" type="hidden" />
                    <input asp-for="DateAdded" type="hidden" />
                    <input asp-for="ApprovedBy" type="hidden" />
                    <input asp-for="Status" type="hidden" />

                    <!-- Skill Name -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-lightning-charge-fill me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Skill Name <span class="text-danger">*</span></span>
                        </label>
                        <input asp-for="SkillName"
                               class="form-control form-control-lg"
                               placeholder="e.g., React, Leadership"
                               required
                               style="border-radius: 0.75rem; border: 1px solid #ccc;" />
                        <span asp-validation-for="SkillName" class="text-danger small"></span>
                    </div>

                    <!-- Skill Level -->
                    <div class="mb-4">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-graph-up me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Skill Level <span class="text-danger">*</span></span>
                        </label>
                        <select asp-for="SkillLevel"
                                class="form-select form-select-lg"
                                required
                                style="border-radius: 0.75rem; border: 1px solid #ccc; padding: 0.75rem 1rem;">
                            <option value="">Select level</option>
                            <option>Beginner</option>
                            <option>Intermediate</option>
                            <option>Advanced</option>
                        </select>
                        <span asp-validation-for="SkillLevel" class="text-danger small"></span>
                    </div>

                    <!-- Category -->
                    <div class="mb-5">
                        <label class="d-flex align-items-center mb-2">
                            <i class="bi bi-tags-fill me-2" style="color: #6B46C1;"></i>
                            <span class="fw-bold" style="color: #333;">Category <span class="text-danger">*</span></span>
                        </label>
                        <select asp-for="Category"
                                class="form-select form-select-lg"
                                required
                                style="border-radius: 0.75rem; border: 1px solid #ccc; padding: 0.75rem 1rem;">
                            <option value="">Select category</option>
                            <option>Technical</option>
                            <option>Soft Skills</option>
                            <option>Management</option>
                            <option>Development</option>
                            <option>Design</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex gap-3 justify-content-end mt-5">
                        <a asp-action="List"
                           class="btn btn-lg px-4 d-flex align-items-center gap-2"
                           style="background-color: #ccc; color: #333; border: none; border-radius: 0.75rem;">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit"
                                class="btn btn-lg px-5 d-flex align-items-center gap-2"
                                style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white; border: none; border-radius: 0.75rem; box-shadow: 0 4px 12px rgba(107,70,193,0.3);">
                            <i class="bi bi-check-circle"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control:focus,
    .form-select:focus {
        border-color: #6B46C1 !important;
        box-shadow: 0 0 0 0.2rem rgba(107, 70, 193, 0.25) !important;
    }

    .card {
        border: 1px solid #ddd;
    }

    hr {
        opacity: 0.3;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
    <!-- Focus Glow -->
    <script>
        document.querySelectorAll('input, select').forEach(el => {
            el.addEventListener('focus', function() {
                this.style.boxShadow = '0 0 0 0.2rem rgba(107, 70, 193, 0.25)';
                this.style.borderColor = '#6B46C1';
            });
            el.addEventListener('blur', function() {
                this.style.boxShadow = 'none';
                this.style.borderColor = '#ccc';
            });
        });
    </script>
}