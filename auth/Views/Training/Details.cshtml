@model Auth.Models.Models.TrainingModel

@{
    ViewData["Title"] = "Training Details";
}

<div class="min-vh-100" style="padding: 2rem 0;">
    <div class="container">
        <!-- Back & Title -->
        <div class="d-flex align-items-center mb-4">
            <a asp-action="List" class="text-decoration-none me-3">
                <i class="bi bi-arrow-left-circle-fill" style="font-size: 1.5rem; color: #6B46C1;"></i>
            </a>
            <div>
                <h1 class="h3 mb-0 fw-bold" style="color: #333;">Training Details</h1>
                <p class="text-muted small mb-0">View your training record and document</p>
            </div>
        </div>

        <!-- Main Card -->
        <div class="card border-0 shadow-sm" style="border-radius: 1rem; overflow: hidden;">
            <div class="card-header d-flex justify-content-between align-items-center p-4"
                 style="background: linear-gradient(135deg, #6B46C1, #5E35B1);">
                <h4 class="mb-0 fw-semibold summary-heading">Training Summary</h4>
                <div class="d-flex gap-2">
                    @if (Model.CompletionStatus != "Approved")
                    {
                    @if (Model.CompletionStatus != "Completed")
                    {
                    <a asp-action="Edit" asp-route-id="@Model.TrainingId"
                       class="btn btn-sm btn-light fw-semibold d-flex align-items-center gap-1">
                        Edit
                    </a>
                        
                    }
                    @if (Model.CompletionStatus != "Approved")
                    {
                    <a asp-action="Delete" asp-route-id="@Model.TrainingId"
                       class="btn btn-sm btn-outline-light fw-semibold d-flex align-items-center gap-1">
                        Delete
                    </a>
                        
                    }
                        
                    }
                </div>
            </div>

            <div class="card-body p-4 p-md-5" style="">
                <div class="row g-4">

                    <!-- Training Info -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                Training
                            </h6>
                            <p class="mb-2"><strong>Name:</strong> @Model.TrainingName</p>
                            <p class="mb-2"><strong>Provider:</strong> @Model.Provider</p>
                            <p class="mb-0">
                                <strong>Status:</strong>
                                <span class="status-badge px-4 py-2 rounded-pill fw-semibold @(Model.CompletionStatus.ToLower() == "completed" ? "bg-success text-white" : Model.CompletionStatus.ToLower() == "in progress" ? "bg-warning text-dark" : "bg-secondary text-white")">
                                    @Model.CompletionStatus
                                </span>
                            </p>
                        </div>
                    </div>

                    <!-- Duration -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                Duration
                            </h6>
                            <p class="mb-2"><strong>Start:</strong> @(Model.StartDate != default ? Model.StartDate.ToString("dd MMM yyyy") : "—")</p>
                            <p class="mb-2"><strong>End:</strong> @(Model.EndDate != default ? Model.EndDate.ToString("dd MMM yyyy") : "—")</p>
                            @if (Model.EndDate != default && Model.StartDate != default && Model.StartDate <= Model.EndDate)
                            {
                                var duration = (Model.EndDate - Model.StartDate).Days;
                                <p class="mb-0"><strong>Length:</strong> @duration day@(duration == 1 ? "" : "s")</p>
                            }
                        </div>
                    </div>

                    <!-- Approval Status -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                Approval Status
                            </h6>
                            <span class="status-badge px-4 py-2 rounded-pill fw-semibold @GetStatusClass(Model.CompletionStatus)">
                                @Model.CompletionStatus
                            </span>
                        </div>
                    </div>

                    <!-- Timeline -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                Timeline
                            </h6>
                            <p class="mb-2"><strong>Added:</strong> @(Model.StartDate != default ? Model.StartDate.ToString("dd MMM yyyy") : "—")</p>
                            <p class="mb-0"><strong>Updated:</strong> @(Model.EndDate != default ? Model.EndDate.ToString("dd MMM yyyy") : "—")</p>
                        </div>
                    </div>

                    <!-- System IDs -->
                    <div class="col-md-6">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                System IDs
                            </h6>
                            <p class="mb-2"><strong>Training ID:</strong> <code>@Model.TrainingId</code></p>
                            <p class="mb-0"><strong>User ID:</strong> <code>@Model.UserId</code></p>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="col-md-12">
                        <div class="info-card p-4 rounded" style="border: 1px solid #eee;">
                            <h6 class="d-flex align-items-center mb-3" style="color: #6B46C1;">
                                Description
                            </h6>
                            <p class="mb-0 text-muted" style="white-space: pre-line;">
                                @(string.IsNullOrWhiteSpace(Model.Description) ? "— No description provided." : Model.Description)
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Document -->
                @if (!string.IsNullOrWhiteSpace(Model.DocumentUrl))
                {
                    <hr class="my-5" style="border-color: #ddd;" />
                    <div class="text-center">
                        @* <h5 class="mb-4" style="color: #333;">
                            Document
                        </h5>
                        <img src="@Url.Content("~/documents/" + Model.DocumentUrl)"
                             alt="Training Document"
                             class="img-fluid rounded shadow-sm mb-4"
                             style="max-height: 320px; border: 2px solid #6B46C1;" /> *@
                        <div>
                            <a asp-action="DownloadDocument"
                               asp-route-fileName="@Model.DocumentUrl"
                               class="btn btn-lg px-5"
                               style="background-color: #6B46C1; color: white; border: none; border-radius: 0.75rem; box-shadow: 0 4px 12px rgba(107,70,193,0.3);">
                                Download Document
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <hr class="my-5" style="border-color: #ddd;" />
                    <p class="text-center text-muted fst-italic">
                        No document uploaded.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(string status) => status?.ToLower() switch
    {
        "approved" => "bg-success text-white",
        "pending" => "bg-warning text-dark",
        "rejected" => "bg-danger text-white",
        _ => "bg-secondary text-white"
    };
}

