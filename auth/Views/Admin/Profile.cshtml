@model Auth.Models.Models.UserModel
@{
    Layout = "~/Views/Shared/_InsideLayout.cshtml";
    ViewData["Title"] = "Profile";
}

<style>
    .profile-card {
        background: rgba(255, 255, 255, 0.12);
        border-radius: 20px;
        padding: 2rem 3rem;
        color: #fff;
        box-shadow: 0 0 25px rgba(0,0,0,0.2);
        text-align: center;
        max-width: 600px;
        margin: auto;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.25);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin: auto;
        color: #00d8ff;
        font-weight: 600;
    }

    .profile-details {
        margin-top: 2rem;
        text-align: left;
    }

        .profile-details h6 {
            color: #00d8ff;
            margin-bottom: 0.3rem;
        }

        .profile-details p {
            margin-bottom: 1rem;
        }
</style>

<div class="container-fluid">
    <h2 class="fw-bold text-white mb-4 text-center">My Profile</h2>

    <div class="profile-card">
        <div class="profile-avatar">
            @Model.FullName.Substring(0, 1).ToUpper()
        </div>

        <h4 class="fw-bold mt-3">@Model.FullName</h4>
        <small class="text-light">@Model.Role</small>

        <div class="profile-details mt-4">
            <h6>Email</h6>
            <p>@Model.Email</p>

            <h6>User ID</h6>
            <p>@Model.UserId</p>

            <h6>Account Status</h6>
            <p>@Model.Status</p>
        </div>

        <button class="btn btn-light mt-3 px-4 fw-semibold">Edit Profile</button>
    </div>
</div>