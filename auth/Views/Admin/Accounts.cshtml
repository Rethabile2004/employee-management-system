@model List<Auth.Models.ViewModels.UserViewModel>

@{
    Layout = "~/Views/Shared/_InsideLayout.cshtml";
    ViewData["Title"] = "Pending Accounts";
}

<div class="container-fluid py-4">
    <!-- Success Alert -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center gap-2" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 fw-bold mb-0">Pending Accounts</h2>
        <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-outline-secondary btn-sm d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i>
            Back to Dashboard
        </a>
    </div>

    <!-- Accounts List -->
    <div class="accounts-list">
        @if (Model != null && Model.Any())
        {
            <!-- Table Header (Desktop) -->
            <div class="accounts-header d-none d-md-flex bg-body-tertiary py-3 px-4 rounded-top border-bottom">
                <div class="col-7"><strong>User</strong></div>
                <div class="col-5 text-end"><strong>Action</strong></div>
            </div>

            @foreach (var user in Model)
            {
                <div class="account-card card border-0 shadow-sm mb-3 rounded-3 overflow-hidden">
                    <div class="card-body p-0">
                        <div class="row g-0 align-items-center">
                            <!-- User Info -->
                            <div class="col-md-7 p-4"
                                 onclick="location.href='@Url.Action("UserDetails", "Admin", new { id = user.UserId })'"
                                 style="cursor: pointer;">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="user-avatar-sm rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                         style="width: 44px; height: 44px; font-weight: 600; font-size: 1rem;">
                                        @user.FullName.Substring(0, 1).ToUpper()
                                    </div>
                                    <div>
                                        <h6 class="mb-1 fw-semibold text-primary">
                                            @user.FullName
                                        </h6>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-person-badge me-1"></i>ID: @user.UserId
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <!-- Approve Action -->
                            <div class="col-md-5 p-3 border-start d-flex justify-content-end align-items-center">
                                <form asp-action="ApproveAccount"
                                      asp-controller="Admin"
                                      method="post"
                                      class="d-inline m-0">
                                    <input type="hidden" name="userId" value="@user.UserId" />
                                    <button type="submit"
                                            class="btn btn-approve btn-sm d-flex align-items-center gap-1"
                                            onclick="this.closest('form').submit(); this.disabled=true;">
                                        <i class="bi bi-check-circle"></i>
                                        <span class="d-none d-lg-inline">Approve</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5 my-5">
                <i class="bi bi-check-all display-1 text-success opacity-50"></i>
                <h5 class="mt-3 text-success">All accounts are approved!</h5>
                <p class="text-muted">No pending registrations at this time.</p>
            </div>
        }
    </div>
</div>