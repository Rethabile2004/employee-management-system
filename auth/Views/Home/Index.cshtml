 @{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section id="hero" class="hero d-flex align-items-center text-white">
    <div class="container">
        <div class="hero-content">
            <h1>Empowering Organisations with Skills Insights</h1>
            <p>Track, assess, and grow your team's capabilities with our intelligent auditing platform.</p>
            <div class="hero-buttons">
                <a href="/Account/Login" class="btn btn-primary btn-lg">Login</a>
                <a href="Home/About" class="btn btn-outline-light btn-lg">Learn More</a>
            </div>
        </div>
    </div>
</section>

<section id="services">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Our Services</h2>
            <p class="text-muted">Explore the key features we offer to help organisations thrive</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <a asp-controller="Home" asp-action="Auditing" class="text-decoration-none text-dark">
                    <div class="service-card hover-effect">
                        <img src="~/images/idea.png" class="mb-3" style="width:50px;height:50px;" alt="Skill Auditing">
                        <h5>Skill Auditing</h5>
                        <p>Assess and track employee skills with real-time insights and reports.</p>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <div class="service-card">
                    <a href="@Url.Action("Analytics", "Home")" style="text-decoration:none;color:inherit;">
                        <img src="~/images/performance.png" class="mb-3" style="width:50px;height:50px;" alt="Analytics">
                        <h5>Analytics</h5>
                        <p>Gain actionable intelligence to drive decision-making and growth strategies.</p>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="service-card">
                    <a href="@Url.Action("SecurePlatform", "Home")" style="text-decoration:none;color:inherit;">
                        <img src="~/images/secure login.png" class="mb-3" style="width:50px;height:50px;" alt="Secure Platform">
                        <h5>Secure Platform</h5>
                        <p>Enjoy top-tier data protection and user-friendly secure access controls.</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features-section bg-light">
    <div class="container text-center">
        <h2 class="fw-bold mb-5">Key Features</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="feature-box p-4 shadow-sm rounded">
                    <img src="~/images/growing.png" class="mb-3" style="width:50px;height:50px;" alt="Real-Time Analytics">
                    <h6 class="fw-bold">Real-Time Analytics</h6>
                    <p>Get instant insights into performance and audit progress.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4 shadow-sm rounded">
                    <img src="~/images/security.png" class="mb-3" style="width:50px;height:50px;" alt="Secure Access">
                    <h6 class="fw-bold">Secure Access</h6>
                    <p>Your data is protected with enterprise-grade security.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4 shadow-sm rounded">
                    <img src="~/images/collaboration.png" class="mb-3" style="width:50px;height:50px;" alt="Collaboration Tools">
                    <h6 class="fw-bold">Collaboration Tools</h6>
                    <p>Enable teamwork with easy-to-use collaboration features.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4 shadow-sm rounded">
                    <img src="~/images/idea.png" class="mb-3" style="width:50px;height:50px;" alt="Customizable Reports">
                    <h6 class="fw-bold">Customizable Reports</h6>
                    <p>Tailor reports to match your organization's needs.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="why-choose-us" class="why-choose">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose Us</h2>
            <p class="text-light">We provide modern, scalable solutions trusted by organisations worldwide</p>
        </div>
        <div class="row text-center g-4">
            <div class="col-md-4">
                <h6>Expertise</h6>
                <p>Backed by years of experience in skill auditing and workforce analytics.</p>
            </div>
            <div class="col-md-4">
                <h6>Innovation</h6>
                <p>Cutting-edge tools that evolve with industry needs and emerging trends.</p>
            </div>
            <div class="col-md-4">
                <h6>Support</h6>
                <p>24/7 customer support with dedicated technical specialists on standby.</p>
            </div>
        </div>
    </div>
</section>

<section id="stats">
    <div class="container text-center">
        <div class="row g-4">
            <div class="col-md-3">
                <div class="stats-circle">
                    <h1>500+</h1>
                    <p>Clients</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-circle">
                    <h1>1200+</h1>
                    <p>Audits</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-circle">
                    <h1>95%</h1>
                    <p>Satisfaction</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-circle">
                    <h1>24/7</h1>
                    <p>Support</p>
                </div>
            </div>
        </div>
    </div>
</section>