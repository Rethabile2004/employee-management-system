@{
    ViewData["Title"] = "Secure Platform";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<style>
    body {
        background-color: #e6d9ff;
    }

    .secure-container {
        min-height: 90vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
    }

    .secure-card {
        background: white;
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        text-align: center;
    }

        .secure-card h1 {
            color: #5a2ea6;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .secure-card p {
            color: #444;
            font-size: 1.05rem;
            margin-bottom: 25px;
        }

        .secure-card ul {
            text-align: left;
            color: #333;
            line-height: 1.7;
            margin: 0 auto 30px;
            max-width: 600px;
        }

            .secure-card ul li::marker {
                color: #5a2ea6;
            }

        .secure-card .btn-primary {
            background-color: #5a2ea6;
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .secure-card .btn-primary:hover {
                background-color: #4b2390;
                transform: translateY(-2px);
            }
</style>

<div class="secure-container">
    <div class="secure-card">
        <h1>Secure Platform</h1>
        <p>
            Security is at the heart of Streamline. Our platform ensures all user data is protected with enterprise-grade
            encryption and secure authentication protocols for peace of mind.
        </p>

        <h4 class="fw-bold mb-3" style="color:#5a2ea6;">Key Highlights</h4>
        <ul>
            <li>Advanced encryption and secure logins.</li>
            <li>Role-based access control for users and admins.</li>
            <li>Regular security audits and compliance monitoring.</li>
            <li>Cloud-based data storage with real-time backups.</li>
        </ul>

        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
            ← Back to Home
        </a>
    </div>
</div>
