@using Auth.Models.Models
@model UserModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="min-vh-100" style="padding: 2rem 0;">
    <div class="container">
        <div class="row g-4">

            <!-- Profile Card -->
            <div class="col-12 col-lg-4">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 1rem; overflow: hidden;">
                    <div class="card-body text-center p-4">
                        <!-- Profile Image -->
                        <div class="mx-auto mb-4" style="width: 120px; height: 120px;">
                            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                            {
                                <img src="@Url.Content("~/images/" + Model.ProfilePicture)"
                                     alt="@Model.FullName"
                                     class="img-fluid rounded-circle shadow-sm"
                                     style="width: 100%; height: 100%; object-fit: cover; border: 4px solid #6B46C1;" />
                            }
                            else
                            {
                                <div class="avatar-initial rounded-circle d-flex align-items-center justify-content-center"
                                     style="width: 100%; height: 100%; background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white; font-size: 2.5rem; font-weight: bold; box-shadow: 0 4px 12px rgba(107,70,193,0.3);">
                                    @Model.FullName[0]
                                </div>
                            }
                        </div>

                        <!-- Name & Role -->
                        <h4 class="fw-bold mb-1" style="color: #333;">@Model.FullName</h4>
                        <p class="text-muted small mb-2">@Model.Email</p>
                        <span class="badge px-4 py-2 rounded-pill fw-semibold mb-3"
                              style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white;">
                            @Model.Role
                        </span>

                        <hr class="my-4" style="border-color: #ddd; opacity: 0.5;" />

                        <!-- Details -->
                        <div class="text-start">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-building me-2" style="color: #6B46C1;"></i>
                                <div>
                                    <small class="text-muted">Department</small>
                                    <p class="mb-0 fw-semibold">@Model.Department</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-briefcase-fill me-2" style="color: #6B46C1;"></i>
                                <div>
                                    <small class="text-muted">Position</small>
                                    <p class="mb-0 fw-semibold">@Model.Position</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-shield-check me-2" style="color: #6B46C1;"></i>
                                <div>
                                    <small class="text-muted">Status</small>
                                    <p class="mb-0">
                                        <span class="status-badge px-3 py-1 rounded-pill small fw-semibold @GetStatusClass(Model.Status)">
                                            @Model.Status
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Edit Button -->
                        <div class="mt-4">
                            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.UserId"
                               class="btn btn-lg w-100 d-flex align-items-center justify-content-center gap-2"
                               style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white; border: none; border-radius: 50px; box-shadow: 0 4px 12px rgba(107,70,193,0.3);">
                                Edit Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column: Info + Cards -->
            <div class="col-12 col-lg-8">
                <!-- Account Info -->
                <div class="card border-0 shadow-sm mb-4" style="border-radius: 1rem;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3" style="color: #6B46C1;">
                            Account Information
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Email:</strong> <span class="text-muted">@Model.Email</span></p>
                                <p class="mb-2"><strong>Employee ID:</strong> <code class="small">@Model.UserId</code></p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Last Login:</strong> <span class="text-muted">@Model.LastLogin.ToString("g")</span></p>
                                <p class="mb-2"><strong>Member Since:</strong> <span class="text-muted">@Model.DateAdded.ToString("MMM dd, yyyy")</span></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary Cards -->
                <div class="row g-4">
                    <!-- Skills -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100" style="border-radius: 1rem; transition: all 0.2s ease;">
                            <div class="card-header d-flex justify-content-between align-items-center p-3"
                                 style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white; border-radius: 1rem 1rem 0 0;">
                                <h6 class="mb-0 fw-semibold">Skills</h6>
                                <i class="bi bi-lightning-charge-fill"></i>
                            </div>
                            <div class="card-body p-3">
                                @if (ViewBag.Skills != null && ViewBag.Skills.Count > 0)
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var s in ViewBag.Skills)
                                        {
                                            <li class="list-group-item bg-transparent px-0 py-2 border-0">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <strong class="small">@s.SkillName</strong>
                                                        <br /><small class="text-muted">@s.SkillLevel</small>
                                                    </div>
                                                    <span class="badge rounded-pill small" style="background-color: #e9ecef; color: #6B46C1;">
                                                        @s.Category
                                                    </span>
                                                </div>
                                            </li>
                                        }
                                        @if (ViewBag.Skills.Count > 3)
                                        {
                                            <li class="list-group-item bg-transparent px-0 py-2 border-0 text-center">
                                                <a asp-controller="Skill" asp-action="List" class="small text-decoration-none" style="color: #6B46C1;">
                                                    +@(ViewBag.Skills.Count - 3) more
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-center text-muted small mb-0 fst-italic">
                                        No skills added
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Qualifications -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100" style="border-radius: 1rem; transition: all 0.2s ease;">
                            <div class="card-header d-flex justify-content-between align-items-center p-3"
                                 style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white; border-radius: 1rem 1rem 0 0;">
                                <h6 class="mb-0 fw-semibold">Qualifications</h6>
                                <i class="bi bi-mortarboard-fill"></i>
                            </div>
                            <div class="card-body p-3">
                                @if (ViewBag.Qualifications != null && ViewBag.Qualifications.Count > 0)
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var q in ViewBag.Qualifications)
                                        {
                                            <li class="list-group-item bg-transparent px-0 py-2 border-0">
                                                <strong class="small">@q.QualificationName</strong>
                                                <br /><small class="text-muted">@q.InstitutionName — @q.CompletionYear</small>
                                            </li>
                                        }
                                        @if (ViewBag.Qualifications.Count > 3)
                                        {
                                            <li class="list-group-item bg-transparent px-0 py-2 border-0 text-center">
                                                <a asp-controller="Qualification" asp-action="List" class="small text-decoration-none" style="color: #6B46C1;">
                                                    +@(ViewBag.Qualifications.Count - 3) more
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-center text-muted small mb-0 fst-italic">
                                        No qualifications
                                    </p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Trainings -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100" style="border-radius: 1rem; transition: all 0.2s ease;">
                            <div class="card-header d-flex justify-content-between align-items-center p-3"
                                 style="background: linear-gradient(135deg, #6B46C1, #5E35B1); color: white; border-radius: 1rem 1rem 0 0;">
                                <h6 class="mb-0 fw-semibold">Trainings</h6>
                                <i class="bi bi-journal-text"></i>
                            </div>
                            <div class="card-body p-3">
                                @if (ViewBag.Trainings != null && ViewBag.Trainings.Count > 0)
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var t in ViewBag.Trainings)
                                        {
                                            <li class="list-group-item bg-transparent px-0 py-2 border-0">
                                                <strong class="small">@t.TrainingName</strong>
                                                <br /><small class="text-muted">@t.Provider</small>
                                            </li>
                                        }
                                        @if (ViewBag.Trainings.Count > 3)
                                        {
                                            <li class="list-group-item bg-transparent px-0 py-2 border-0 text-center">
                                                <a asp-controller="Training" asp-action="List" class="small text-decoration-none" style="color: #6B46C1;">
                                                    +@(ViewBag.Trainings.Count - 3) more
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-center text-muted small mb-0 fst-italic">
                                        No trainings
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(string status) => status?.ToLower() switch
    {
        "active" => "bg-success text-white",
        "inactive" => "bg-secondary text-white",
        "suspended" => "bg-danger text-white",
        _ => "bg-warning text-dark"
    };
}

<style>
    .card {
        transition: all 0.2s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(107,70,193,0.12) !important;
        }

    code {
        background: #f1f1f1;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.85em;
        color: #444;
    }

    .status-badge {
        font-size: 0.75rem;
        padding: 0.35rem 0.75rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}